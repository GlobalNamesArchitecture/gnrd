- if @output[:agent] && @output[:agent][:content_type] && @output[:agent][:content_type].include?("image")
  %h3
    %strong Source Image
  #found-names-preview
    %img{:src => @output[:input_url]}
%ul#found-names-summary
  %li
    %strong Status:
    = @output[:status]
  - if !@output[:input_url].blank?
    %li
      %strong URL:
      = @output[:input_url]
  - if !@output[:file].blank?
    %li
      %strong File:
      = @output[:file]
  - if !@output[:total].blank?
    %li
      %strong Total:
      = @output[:total]
  %li
    %strong Engine(s):
    = @output[:engines].join(", ")
  - if @output[:exec_time]
    %li
      %strong Time:
      = @output[:exec_time][:find_names_duration].to_s
      s to find names, #{@output[:exec_time][:total_duration].to_s} s for entire process
- if @output[:total] && @output[:total] > 0
  %table#found-names-grid
    %thead
      %tr
        %th Verbatim
        %th Scientific
    %tbody
      - cycle = "odd"
      - @output[:names].sort { |a,b| a[:verbatim] <=> b[:verbatim] }.each do |name|
        - cycle = (cycle == "odd") ? "even" : "odd"
        %tr{:class => cycle}
          %td= name[:verbatim]
          %td= name[:scientificName]

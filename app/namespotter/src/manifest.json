{
  "name"            : "Global Names NameSpotter",
  "version"         : "0.7",
  "description"     : "__MSG_manifest_description__",
  "update_url"      : "http://gnrd.globalnames.org/namespotter/updates.xml",
  "background_page" : "background.html",
/*  "options_page"    : "options.html", */
  "icons" : {
    "48"  : "images/icon-48.png",
    "128" : "images/icon-128.png"
  },
  "default_locale" : "en",
  "browser_action": {
    "default_title" : "Find scientific names",
    "default_icon"  : "images/icon-19-grey.png",
    "popup"         : "popup.html"
  },
  "permissions": ["tabs", "<all_urls>", "background"],
  "content_security_policy" : "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "content_scripts": [
    {
      "matches" : ["<all_urls>"],
      "css"     : [
        "css/content.css",
        "css/jquery.qtip.css"
      ],
      "js"      : [
        "js/jquery-1.7.1.min.js",
        "js/jquery.highlight.js",
        "js/jquery.qtip.min.js",
        "js/content.js"
      ]
    }
  ]
}